<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="mb-1">Contestants</h1>
    <p class="text-muted mb-0">Season <%= @season.year %> lineup at a glance.</p>
  </div>
  <% if admin? %>
    <%= link_to "Add Contestant", new_season_contestant_path(@season), class: "btn btn-primary" %>
  <% end %>
</div>

<div class="card shadow-sm">
  <div class="card-body p-0">
    <% if @contestants.any? %>
      <div class="list-group list-group-flush">
        <% @contestants.each do |contestant| %>
          <div class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <h2 class="h6 mb-1"><%= contestant.name %></h2>
              <span class="badge <%= contestant.eliminated? ? 'bg-danger' : 'bg-success' %>">
                <%= contestant.eliminated? ? 'Eliminated' : 'Active' %>
              </span>
            </div>
            <div class="btn-group btn-group-sm" role="group">
              <%= link_to "View", season_contestant_path(@season, contestant), class: "btn btn-outline-secondary" %>
              <% if admin? %>
                <%= link_to "Edit", edit_season_contestant_path(@season, contestant), class: "btn btn-outline-primary" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="p-4 text-center text-muted">
        <p class="mb-0">No contestants registered yet.</p>
      </div>
    <% end %>
  </div>
</div>
