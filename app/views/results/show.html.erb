<div class="mb-3">
  <%= link_to "← Back to Episode", season_episode_path(@season, @episode), class: "text-decoration-none" %>
</div>

<div class="card shadow-sm">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-start mb-3">
      <div>
        <h1 class="h4 mb-1">Episode <%= @episode.number %> Result</h1>
        <p class="text-muted mb-0">Season <%= @season.year %></p>
      </div>
      <div>
        <% if @result %>
          <%= link_to "Edit Result", edit_season_episode_result_path(@season, @episode), class: "btn btn-outline-primary" %>
        <% else %>
          <%= link_to "Add Result", new_season_episode_result_path(@season, @episode), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>

    <% if @result %>
      <dl class="row mb-0">
        <dt class="col-sm-4 text-muted">Star Baker</dt>
        <dd class="col-sm-8 fw-semibold"><%= @result.star_baker&.name || "TBD" %></dd>
        <dt class="col-sm-4 text-muted">Technical Winner</dt>
        <dd class="col-sm-8 fw-semibold"><%= @result.technical_winner&.name || "TBD" %></dd>
        <dt class="col-sm-4 text-muted">Handshake</dt>
        <dd class="col-sm-8 fw-semibold"><%= @result.handshake&.name || "None" %></dd>
        <dt class="col-sm-4 text-muted">Eliminated</dt>
        <dd class="col-sm-8 fw-semibold"><%= @result.eliminated&.name || "TBD" %></dd>
      </dl>
    <% else %>
      <p class="text-muted mb-0">No result recorded yet.</p>
    <% end %>
  </div>
</div>
