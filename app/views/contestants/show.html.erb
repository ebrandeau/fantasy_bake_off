<div class="mb-3">
  <%= link_to "← Back to Contestants", season_contestants_path(@season), class: "text-decoration-none" %>
</div>

<div class="card shadow-sm">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-start">
      <div>
        <h1 class="h3 mb-1"><%= @contestant.name %></h1>
        <span class="badge <%= @contestant.eliminated? ? 'bg-danger' : 'bg-success' %>">
          <%= @contestant.eliminated? ? "Eliminated" : "In Competition" %>
        </span>
      </div>
      <% if admin? %>
        <div class="btn-group" role="group">
          <%= link_to "Edit", edit_season_contestant_path(@season, @contestant), class: "btn btn-outline-primary" %>
          <%= link_to "Delete", season_contestant_path(@season, @contestant), class: "btn btn-outline-danger",
                      data: { turbo_method: :delete, turbo_confirm: "Remove this contestant?" } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
