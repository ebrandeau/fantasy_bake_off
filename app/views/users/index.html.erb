<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="mb-1">Users</h1>
    <p class="text-muted mb-0">League members who submit weekly picks.</p>
  </div>
  <%= link_to "Invite User", new_user_path, class: "btn btn-primary" %>
</div>

<div class="card shadow-sm">
  <div class="card-body p-0">
    <% if @users.any? %>
      <div class="table-responsive">
        <table class="table table-striped align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col" class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td class="fw-semibold"><%= user.name %></td>
                <td><%= mail_to user.email %></td>
                <td class="text-end">
                  <div class="btn-group btn-group-sm" role="group">
                    <%= link_to "View", user_path(user), class: "btn btn-outline-secondary" %>
                    <%= link_to "Edit", edit_user_path(user), class: "btn btn-outline-primary" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="p-4 text-center text-muted">
        <p class="mb-0">No users yet. Invite players to join the league.</p>
      </div>
    <% end %>
  </div>
</div>
