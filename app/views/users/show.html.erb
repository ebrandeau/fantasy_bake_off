<div class="mb-3">
  <%= link_to "← Back to Users", users_path, class: "text-decoration-none" %>
</div>

<div class="card shadow-sm">
  <div class="card-body d-flex justify-content-between align-items-start">
    <div>
      <h1 class="h3 mb-2"><%= @user.name %></h1>
      <p class="text-muted mb-0"><%= mail_to @user.email %></p>
    </div>
    <div class="btn-group" role="group">
      <%= link_to "Edit", edit_user_path(@user), class: "btn btn-outline-primary" %>
      <%= link_to "Delete", user_path(@user), class: "btn btn-outline-danger",
                  data: { turbo_method: :delete, turbo_confirm: "Delete this user?" } %>
    </div>
  </div>
</div>
