<div class="mb-3">
  <%= link_to "← Back to Season", season_path(@season), class: "text-decoration-none" %>
</div>

<div class="d-flex justify-content-between align-items-center mb-3">
  <div>
    <h1 class="mb-1">Season <%= @season.year %> Leaderboard</h1>
    <p class="text-muted mb-0">Live scoring based on weekly results and contestant performance.</p>
  </div>
</div>

<div class="card shadow-sm">
  <div class="card-body p-0">
    <% if @leaderboard.present? %>
      <div class="table-responsive">
        <table class="table table-striped align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th scope="col">User</th>
              <th scope="col" class="text-end">Points</th>
            </tr>
          </thead>
          <tbody>
            <% @leaderboard.each do |entry| %>
              <tr>
                <td><%= entry[:user].name %></td>
                <td class="text-end fw-semibold"><%= entry[:points] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="p-4 text-center text-muted">
        <p class="mb-0">Leaderboard coming soon—record results to see scores.</p>
      </div>
    <% end %>
  </div>
</div>
