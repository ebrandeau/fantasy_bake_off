<%= form_with(model: @season, class: "row g-3", local: true) do |form| %>
  <% if @season.errors.any? %>
    <div class="alert alert-danger">
      <h2 class="h5"><%= pluralize(@season.errors.count, "error") %> prevented this season from being saved:</h2>
      <ul class="mb-0">
        <% @season.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-6">
    <%= form.label :year, class: "form-label" %>
    <%= form.number_field :year, min: 0, class: "form-control", placeholder: "2025" %>
  </div>

  <div class="col-md-6 d-flex align-items-center">
    <div class="form-check mt-4">
      <%= form.check_box :active, class: "form-check-input", id: "season_active" %>
      <%= form.label :active, class: "form-check-label" %>
    </div>
  </div>

  <div class="col-12">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", @season.persisted? ? season_path(@season) : seasons_path, class: "btn btn-link" %>
  </div>
<% end %>
