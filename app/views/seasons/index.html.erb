<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="mb-1">Seasons</h1>
    <p class="text-muted mb-0">Manage episodes, contestants, and results for each season.</p>
  </div>
  <% if admin? %>
    <%= link_to "New Season", new_season_path, class: "btn btn-primary" %>
  <% end %>
</div>

<div class="card shadow-sm">
  <div class="card-body p-0">
    <% if @seasons.any? %>
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th scope="col">Year</th>
              <th scope="col">Status</th>
              <th scope="col" class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @seasons.each do |season| %>
              <tr>
                <td class="fw-semibold"><%= season.year %></td>
                <td>
                  <% status_class = season.active? ? "bg-success" : "bg-secondary" %>
                  <span class="badge rounded-pill <%= status_class %>"><%= season.active? ? "Active" : "Completed" %></span>
                </td>
                <td class="text-end">
                  <div class="btn-group" role="group">
                    <%= link_to "Open", season_path(season), class: "btn btn-sm btn-outline-primary" %>
                    <% if admin? %>
                      <%= link_to "Edit", edit_season_path(season), class: "btn btn-sm btn-outline-secondary" %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="p-4 text-center text-muted">
        <p class="mb-0">No seasons yet. Get started by creating your first season.</p>
      </div>
    <% end %>
  </div>
</div>
