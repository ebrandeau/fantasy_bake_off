<%= form_with(model: @user, class: "row g-3", local: true) do |form| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <h2 class="h5"><%= pluralize(@user.errors.count, "error") %> prevented this user from being saved:</h2>
      <ul class="mb-0">
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-6">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Mary Berry" %>
  </div>

  <div class="col-md-6">
    <%= form.label :email, class: "form-label" %>
    <%= form.email_field :email, class: "form-control", placeholder: "mary@example.com" %>
  </div>

  <div class="col-12">
    <div class="form-check">
      <%= form.check_box :is_admin, class: "form-check-input", id: "user_is_admin" %>
      <%= form.label :is_admin, "Administrator", class: "form-check-label" %>
    </div>
  </div>

  <div class="col-12">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", @user.persisted? ? user_path(@user) : users_path, class: "btn btn-link" %>
  </div>
<% end %>
